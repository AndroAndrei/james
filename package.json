{
  "name": "james",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "build": "rm -rf build && parallelshell 'npm run build:js' 'npm run build:style'",
    "build:js": "babel src --out-dir build",
    "build:style": "node-sass --output-style compressed --source-map build/james.css.map style/main.scss build/james.css && autoprefixer build/james.css && npm run copy-files",
    "watch": "parallelshell 'npm run watch:js' 'npm run watch:style'",
    "watch:js": "nodemon --watch src --ext js --no-stdin --exec \"npm run build:js\"",
    "watch:style": "nodemon --watch style --ext scss --no-stdin --exec \"npm run build:style\"",
    "copy-files": "rm -rf build/fonts && mkdir -p build/fonts && cp ./node_modules/font-awesome/fonts/* build/fonts/ && cp ./resource/* ./build/",
    "package": "electron-packager ./ James --platform=darwin --arch=x64 --icon=./resource/icon.png --version=0.28.3"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "hoxy": "^1.2.4",
    "nedb": "^1.1.2",
    "pem": "^1.7.2",
    "react": "^0.13.3",
    "uniqid": "^1.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^5.2.0",
    "babel": "^5.5.5",
    "babelify": "^6.1.2",
    "browserify": "^10.2.4",
    "electron-packager": "^4.1.3",
    "font-awesome": "^4.3.0",
    "node-sass": "^3.1.2",
    "nodemon": "^1.3.7",
    "parallelshell": "^1.1.1",
    "watchify": "^3.2.2"
  }
}
