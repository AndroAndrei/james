{
  "name": "james",
  "version": "1.5.0",
  "description": "HTTP/HTTPS proxy built in Electron and React",
  "author": "Julian Hollmann <hollmann@uxebu.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/james-proxy/james.git"
  },
  "main": "main/index.js",
  "scripts": {
    "postinstall": "npm run build:dll",
    "prebuild": "npm run clean",
    "build": "electron-webpack",
    "build:dll": "electron-webpack dll",
    "clean": "rimraf dist/ binaries/",
    "start": "electron-webpack dev",
    "dev": "npm run start",
    "development": "npm run dev",
    "lint": "eslint ./src ./test",
    "test": "electron-mocha --renderer --reporter dot --recursive -r setup-referee-sinon/globals test/unit --compilers js:babel-core/register",
    "test-ci": "npm run lint && npm run test",
    "predist": "npm run build",
    "dist": "build --x64",
    "predist:win64": "npm run package",
    "dist:win64": "build --windows --x64"
  },
  "dependencies": {
    "electron-updater": "^2.17.6",
    "font-awesome": "^4.5.0",
    "history": "^4.7.2",
    "hoxy": "^3.2.0",
    "james-browser-launcher": "^1.3.0",
    "lodash.throttle": "^4.1.0",
    "materialize-css": "^0.97.5",
    "nedb": "^1.7.1",
    "prop-types": "^15.6.0",
    "raven-js": "^3.0.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-loadable": "^5.3.1",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.8",
    "redux": "^3.5.2",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.0.1",
    "source-map-support": "^0.5.0",
    "uniqid": "^4.0.0"
  },
  "devDependencies": {
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-react": "^6.24.1",
    "electron": "1.7.9",
    "electron-builder": "^19.46.9",
    "electron-localshortcut": "^2.0.2",
    "electron-mocha": "^5.0.0",
    "electron-webpack": "^1.11.0",
    "eslint": "^4.12.0",
    "eslint-plugin-react": "^7.5.1",
    "mocha": "^4.0.1",
    "node-sass": "4.7.2",
    "redux-mock-store": "^1.0.4",
    "referee": "^1.2.0",
    "referee-sinon": "^1.0.3",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "setup-referee-sinon": "^0.3.0",
    "sinon": "^4.1.2",
    "sinon-as-promised": "^4.0.0",
    "webpack": "^3.9.1",
    "webpack-sources": "^1.0.1"
  },
  "electronWebpack": {
    "title": "James Proxy",
    "renderer": {
      "dll": [
        "react",
        "react-dom",
        "react-router-dom",
        "react-loadable",
        "redux",
        "redux-thunk",
        "redux-logger",
        "react-router-redux",
        "raven-js",
        "history",
        "font-awesome",
        "materialize-css",
        "source-map-support"
      ]
    }
  },
  "build": {
    "appId": "com.jamesproxy.james",
    "productName": "James",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "resources/icon.icns"
    },
    "dmg": {
      "icon": "resources/icon.icns",
      "background": "resources/icon.png"
    },
    "win": {
      "icon": "resources/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "synopsis": "Web proxy"
    },
    "directories": {
      "buildResources": "resources",
      "output": "binaries"
    },
    "publish": "github"
  }
}
